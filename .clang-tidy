Checks:          '-*,readability-*,-readability-uppercase-literal-suffix,cppcoreguidelines-*,bugprone-*,modernize-*,-modernize-use-trailing-return-type,-modernize-avoid-c-arrays, -cppcoreguidelines-special-member-functions, -bugprone-suspicious-semicolon, -*-magic-numbers, -cppcoreguidelines-pro-type-member-init, -bugprone-forwarding-reference-overload, -cppcoreguidelines-c-copy-assignment-signature, -readability-qualified-auto, -bugprone-unhandled-self-assignment, -cppcoreguidelines-pro-bounds-pointer-arithmetic, -bugprone-exception-escape'
WarningsAsErrors: '*'
HeaderFilterRegex: 'Spacy/Spacy/.*'
AnalyzeTemporaryDtors: false
User:            cequenser
CheckOptions:
  - key:             readability-identifier-naming.FunctionCase
    value:           'camelBack'
  - key:             readability-identifier-naming.ClassCase
    value:           'CamelCase'
  - key:             readability-braces-around-statements.ShortStatementLines
    value:           '3'
 # - key:             cppcoreguidelines-narrowing-conversions.PedanticMode
 #   value:           '1'

